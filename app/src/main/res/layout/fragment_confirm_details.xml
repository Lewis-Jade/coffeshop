<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ConfirmDetailsFragment">


    <TextView
        android:id="@+id/tv_cnf_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:text="Confirm Details"
        android:elevation="5dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@color/conf_dtl"
        />
     <GridLayout
         android:id="@+id/grid_layout"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:columnCount="1"
         android:rowCount="3"
         android:layout_margin="20dp"
         android:background="@drawable/grid_bg"
         android:elevation="5dp"
         app:layout_constraintTop_toBottomOf="@id/tv_cnf_details"
         >
       <TextView
           android:id="@+id/tv_fullname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="full Name:"
           android:textSize="24sp"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:fontFamily="@font/poppins_regular"
           android:layout_margin="10dp"
           android:padding="5dp"
           />
         <TextView
             android:id="@+id/tv_email"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="email"
             android:textSize="24sp"
             android:padding="5dp"
             android:textStyle="bold"
             android:textColor="@color/black"
             android:layout_margin="10dp"
             android:fontFamily="@font/poppins_regular"
             />
         <TextView
             android:id="@+id/tv_phone"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="phone"
             android:textSize="24sp"
             android:textStyle="bold"
             android:textColor="@color/black"
             android:fontFamily="@font/poppins_regular"
             android:layout_margin="10dp"
             android:padding="5dp"
             />
         <TextView
         android:id="@+id/tv_gender"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="gender"
         android:textSize="24sp"
         android:textStyle="bold"
         android:textColor="@color/black"
         android:fontFamily="@font/poppins_regular"
         android:layout_margin="10dp"
         android:padding="5dp"
         />

     </GridLayout>

    <android.widget.Button
        android:id="@+id/bv_cancel"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/grid_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/cancel_btn_bg"
        android:elevation="5dp"
        app:layout_constraintEnd_toStartOf="@id/bv_confirm"

        />
    <android.widget.Button
        android:id="@+id/bv_confirm"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/grid_layout"
        app:layout_constraintStart_toEndOf="@id/bv_cancel"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/confirm_bg"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>