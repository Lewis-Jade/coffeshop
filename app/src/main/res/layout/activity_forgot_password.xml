<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ForgotPasswordActivity"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gender"
        tools:context=".ForgotPasswordActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:background="@drawable/circuler_logo"
            android:scaleType="centerInside"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:elevation="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_passwordReset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_passwordReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Recovery"
            android:fontFamily="@font/poppins_regular"
            android:textSize="26sp"
            android:textColor="@color/tagline"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintBottom_toTopOf="@id/ev_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/ev_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Recovery email"
            android:paddingVertical="12dp"
            android:paddingStart="10dp"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/edit_text_bg"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_passwordReset"
            app:layout_constraintBottom_toTopOf="@id/bv_resetPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.widget.Button
            android:id="@+id/bv_resetPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:background="@drawable/btn_bg"
            android:textAllCaps="false"
            android:textColor="@color/tagline"
            android:textSize="22sp"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/ev_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/centerGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="horizontal" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#80000000"
        >

        <!-- Loading Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_loading_card"
            android:elevation="8dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/logo"
                android:background="@drawable/bordes_drwd"
                android:backgroundTint="@color/tagline"
                android:layout_marginEnd="20dp"
                />

            <ProgressBar
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/gender"/>

            <TextView
                android:layout_marginStart="12dp"
                android:text="sending email......."
                android:textSize="16sp"
                android:textColor="@color/gender"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

        </LinearLayout>

    </FrameLayout>




</FrameLayout>